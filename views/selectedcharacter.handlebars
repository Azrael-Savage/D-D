{{#if logged_in}}
<form class="charsheet">
  <header>
    <section class="charname">
      <label for="char-name">Character Name</label>
      <input id="char-name" name="char-name" type="text" value="{{name}}"/>
    </section>
    <section class="misc">
      <ul>
        <li>
          <label  for="level">Level</label><input id ="level" name="level" value="{{level}}"/>
          </li>
        <li>
          <label for="class">Class</label><input id="class" name="class" value="{{class}}"/>
        </li>
        <li>
          <label for="gender">Gender</label><input id = "gender" name="gender" value="{{gender}}"/>
        </li>
        <li>
          <label for="playername">Player Name</label><input  id = "playername" name="playername" value="{{user.name}}">
        </li>
        <li>
          <label for="race">Race</label><input id="race"  name="race" value="{{race}}"/>
        </li>
        <li>
          <label for="build">build</label><input id= "build" name="build" value="{{build}}"/>
        </li>
        <li>
          <label for="exp">Experience Points</label><input id ="exp"name="exp" value="{{exp}}"/>
        </li>
      </ul>
    </section>
  </header>
  <nav>
    <section>
      <div class="col-md-6">
        <button type="submit" class="submit-character btn btn-dark">Submit Character</button>
      </div>
    </section>

  </nav>
  <main>
    <section>
      <section class="attributes">
        <div class="scores">
          <ul>
            <li>
              <div class="score">
                <label for="Strengthscore">Strength</label><input id="Strengthscore"  name="Strengthscore"value="{{strength}}"/>
              </div>
              <div class="modifier">
                <input name="Strengthmod" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Dexterityscore">Dexterity</label><input id="Dexterityscore" name="Dexterityscore" value="{{dexterity}}"/>
              </div>
              <div class="modifier">
                <input name="Dexteritymod" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Constitutionscore">Constitution</label><input id ="Constitutionscore" name="Constitutionscore" value="{{constitution}}"/>
              </div>
              <div class="modifier">
                <input name="Constitutionmod" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Wisdomscore">Wisdom</label><input id="Wisdomscore" name="Wisdomscore" value="{{wisdom}}"/>
              </div>
              <div class="modifier">
                <input name="Wisdommod" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Intelligencescore">Intelligence</label><input id ="Intelligencescore" name="Intelligencescore" value="{{intelligence}}"/>
              </div>
              <div class="modifier">
                <input name="Intelligencemod" placeholder="+0" />
              </div>
            </li>
            <li>
              <div class="score">
                <label for="Charismascore">Charisma</label><input id="Charismascore" name="Charismascore" value="{{charisma}}"/>
              </div>
              <div class="modifier">
                <input name="Charismamod" placeholder="+0" />
              </div>
            </li>
          </ul>
        </div>
    <section>x 
      </section>
       <section id = "char-equipment" class="equipment">
        <div>
          <label>Inventory</label>
          </div>
          <textarea placeholder="Item list here"></textarea>
        </div>
      </section>
    </section>
    
  </main>
  <footer>
    Thank you {{user.name}} for using our character generator!
  </footer>
</form>
{{/if}}